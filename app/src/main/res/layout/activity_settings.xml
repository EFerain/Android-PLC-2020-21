<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorBackgroundSiemens"
    android:paddingLeft="20dp"
    android:paddingRight="20dp">

    <!-- Welcoming Message -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:gravity="center"
        android:text="Settings"
        android:textColor="@color/colorText"
        android:paddingTop="10dp"
        android:paddingBottom="30dp"
        android:textSize="25sp"/>

    <!-- Login/Email -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Login/Email : " />

    <EditText
        android:id="@+id/et_settings_loginMail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"/>

    <!-- Last Name -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Last name : "
        android:paddingTop="10dp" />
    <EditText
        android:id="@+id/et_settings_lastName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <!-- First name -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="First name : "
        android:paddingTop="10dp" />
    <EditText
        android:id="@+id/et_settings_firstName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <!-- is Super User -->
    <CheckBox
        android:id="@+id/cb_settings_isSuperUser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Is Super User"
        android:layout_marginBottom="-8dp"
        android:visibility="gone"
        android:checked="false"/>

    <!-- Button SAVE CHANGES -->
    <Button
        android:id="@+id/bt_settings_saveChanges"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Save changes"
        android:padding="20dp"
        android:layout_marginTop="20dp"
        android:onClick="f" />

</LinearLayout>
